{
  "name": "mongo-odm",
  "version": "1.0.6",
  "description": "Mongo ODB client",
  "main": "index.js",
  "scripts": {
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "coverage": "nyc npm test",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls"
  },
  "author": "Martin Mika",
  "license": "MIT",
  "typings": "src/index",
  "files": [
    "src/"
  ],
  "nyc": {
    "include": [
      "src/**/*.ts",
      "test/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@types/mongodb": "^3.0.7",
    "mongodb": "^3.0.4",
    "reflect-metadata": "^0.1.12",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "mikro-config": "^1.2.2",
    "mocha": "^5.0.4",
    "nyc": "^11.6.0"
  }
}
